<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_height="80dp"
        android:layout_width="80dp" android:id="@+id/cupcake_list_image"
        android:contentDescription="@string/cupcake"
        android:padding="@dimen/list_image_padding"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:orientation="vertical"
        >

        <TextView android:textSize="@dimen/cupcake_name_text" android:id="@+id/name"
            android:layout_width="fill_parent" android:layout_height="40dp"
            android:paddingLeft="@dimen/cupcake_name_padding_left"
            android:paddingTop="@dimen/cupcake_name_padding_top">
        </TextView>

        <TextView android:textSize="@dimen/cupcake_description" android:id="@+id/description"
        android:layout_width="fill_parent" android:layout_height="60dp"
        android:paddingLeft="@dimen/cupcake_name_padding_left" android:paddingRight="@dimen/cupcake_description_padding_right">
         </TextView>
    </LinearLayout>

</LinearLayout>