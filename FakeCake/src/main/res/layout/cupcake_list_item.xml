<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:orientation="vertical">
        <TextView android:textSize="@dimen/cupcake_name_text" android:id="@+id/name"
            android:layout_width="fill_parent" android:layout_height="40dp"
            android:layout_marginLeft="100dp">
        </TextView>
         <TextView android:textSize="@dimen/cupcake_short_description" android:id="@+id/short_description"
        android:layout_width="fill_parent" android:layout_height="60dp"
        android:layout_marginLeft="100dp">
         </TextView>
    </LinearLayout>

</LinearLayout>